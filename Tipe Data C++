//Untuk Hasil (Output) {1 Turun Vertical}
#include <iostream>
using namespace std;

int i=1;
int main()
{
	for (i; i<=10; i++)
{
	cout << "1" <<endl;
}
}



//Untuk Hasil (Output) {1 Turun Vertical Baris 5 "Quantumteam"}
#include <iostream>
using namespace std;

int i=1;
int main()
{
	for (i; i<=10; i++)
{
	if (i==5){
	cout << "Quantumteam" <<endl;
}
cout << "1" <<endl;
}
}
